{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/video/(.*)",
            "destination": "/"
        },
        {
            "source": "/api/bcover/(.*)",
            "destination": "app.js"
        },
        {
            "source": "/api/feedback/(.*)",
            "destination": "app.js"
        },
        {
            "source": "/(.*)",
            "destination": "public/$1"
        }
    ],
    "headers": [
        {
            "source": "/",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "Cache-Control: public, max-age=86400, s-maxage=86400"
                }
            ]
        },
        {
            "source": "/(.*).(jpg|jpeg|png|gif|webp|svg|css|js|json|html)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "Cache-Control: public, max-age=86400, s-maxage=86400"
                }
            ]
        },
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, max-age=0"
                }
            ]
        },
        {
            "source": "/video/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, max-age=0"
                }
            ]
        }
    ]
}